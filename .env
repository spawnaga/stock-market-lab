# Stock Market Lab - Environment Configuration
# Copy this file to .env and modify values as needed

# ============================================
# MARKET DATA CONFIGURATION
# ============================================
# Path to your market data files (CSV or TXT, comma-separated)
# This path will be mounted inside the container at /data/market
# Examples:
#   Windows: C:/Users/YourName/MarketData
#   Linux/Mac: /home/yourname/market-data
#   Relative to project: ./data/market
MARKET_DATA_PATH=./data/market

# ============================================
# GPU CONFIGURATION
# ============================================
# Set to 'true' to enable GPU support (requires NVIDIA GPU and drivers)
# Set to 'false' to run on CPU only (for machines without NVIDIA GPU)
ENABLE_GPU=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=stock_market
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=stock_password
DATABASE_URL=postgresql://stock_user:stock_password@postgres:5432/stock_market

# ============================================
# SERVICE PORTS (change if you have conflicts)
# ============================================
FRONTEND_PORT=3001
BACKEND_API_PORT=5100
CPP_BACKEND_PORT=8080
GPU_SERVICE_PORT=8081
POSTGRES_PORT=5432
REDIS_PORT=7379
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=29092

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# KAFKA CONFIGURATION
# ============================================
KAFKA_BROKERS=kafka:9092

# ============================================
# SERVICE URLS (internal Docker network)
# ============================================
CPP_BACKEND_URL=http://cpp-backend:8080
PYTHON_AGENTS_URL=http://python-agents:5000
GPU_ACCELERATION_URL=http://gpu-acceleration:8080

# ============================================
# FRONTEND CONFIGURATION
# ============================================
REACT_APP_API_URL=http://localhost:5100
REACT_APP_WS_URL=ws://localhost:5100
REACT_APP_CPP_API_URL=http://localhost:8080

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# SECURITY (Change in production!)
# ============================================
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-here
SECRET_KEY=stock-market-secret-key

# ============================================
# EXTERNAL DATA SERVICES (Optional)
# ============================================
ALPHA_VANTAGE_API_KEY=your-api-key
POLYGON_API_KEY=your-api-key
IEX_CLOUD_TOKEN=your-token

# ============================================
# PERFORMANCE SETTINGS
# ============================================
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=300

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090
