# Stock Market Lab - Environment Configuration
# Copy this file to .env and modify values as needed

# Database Configuration
POSTGRES_DB=stock_market
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=stock_password
DATABASE_URL=postgresql://stock_user:stock_password@postgres:5432/stock_market

# Redis Configuration
REDIS_URL=redis://redis:6379

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# Service URLs
CPP_BACKEND_URL=http://cpp-backend:8080
PYTHON_AGENTS_URL=http://python-agents:8000
GPU_ACCELERATION_URL=http://gpu-acceleration:8080

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080

# Development Settings
NODE_ENV=development
LOG_LEVEL=info

# Security (Change in production)
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# External Services (Optional)
ALPHA_VANTAGE_API_KEY=your-api-key
POLYGON_API_KEY=your-api-key
IEX_CLOUD_TOKEN=your-token

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
